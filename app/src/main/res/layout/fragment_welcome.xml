<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.WelcomeFragment"
    android:background="@color/black">

    <ImageView
        android:id="@+id/pic_1"
        android:layout_width="275dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pic_2"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic_1" />

    <ImageView
        android:id="@+id/pic_3"
        android:layout_width="135dp"
        android:layout_height="135dp"
        app:layout_constraintStart_toEndOf="@id/pic_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pic_4"
        android:layout_width="248dp"
        android:layout_height="244dp"
        android:layout_alignBottom="@id/pic_2"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toTopOf="@id/pic_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic_2"
        app:layout_constraintVertical_bias="0.507" />

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/pic_5"
        android:layout_width="130dp"
        android:layout_height="155dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/pic_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic_3" />

<!--    <ImageView-->
<!--        android:id="@+id/pic_6"-->
<!--        android:layout_width="260dp"-->
<!--        android:layout_height="160dp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent" />-->

    <ImageView
        android:id="@+id/pic_7"
        android:layout_width="95dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@id/pic_5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pic_2"
        app:layout_constraintTop_toBottomOf="@id/pic_1" />


    <ImageView
        android:id="@+id/pic_8"
        android:layout_width="160dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pic_4"
        app:layout_constraintTop_toBottomOf="@id/pic_7" />


    <ImageView
        android:id="@+id/pic_9"
        android:layout_width="180dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pic_10"/>

    <ImageView
        android:id="@+id/pic_10"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pic_4"
        app:layout_constraintTop_toBottomOf="@id/pic_8" />


    <ImageView
        android:id="@+id/pic_11"
        android:layout_width="90dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/pic_10"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/pic_9"
        app:layout_constraintTop_toBottomOf="@id/pic_8"
   />

    <ImageView
        android:id="@+id/pic_12"
        android:layout_width="230dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/pic_4"
        app:layout_constraintEnd_toStartOf="@id/pic_9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#56171414"
        android:fontFamily="cursive"
        android:text="Show the whole world your best moment !"
        android:textColor="@color/cardBackground"
        android:textSize="20dp"
        android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>